{
    "name": "ixocreate/common-types",
    "description": "ixocreate/common-types",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "IXOCREATE"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.1",
        "ixocreate/contract": "=1.0.0-alpha1",
        "ixocreate/entity": "=1.0.0-alpha1",
        "ixocreate/database": "=1.0.0-alpha1",
	    "deanblackborough/php-quill-renderer": "^3.14",
        "beberlei/assert": "^2.9",
        "ramsey/uuid": "^3.7"
    },
    "require-dev": {
        "ixocreate/coding-standard": "^1.0.1",
        "phpunit/phpunit": "^6.0.6",
        "php-coveralls/php-coveralls": "^2.0",
        "ixocreate/application": "=1.0.0-alpha1",
        "ixocreate/schema": "=1.0.0-alpha1",
        "ixocreate/media": "=1.0.0-alpha1",
        "ixocreate/cms": "=1.0.0-alpha1"
    },
    "autoload": {
        "psr-4": {
            "Ixocreate\\CommonTypes\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IxocreateTest\\CommonTypes\\": "tests/src/",
            "IxocreateMisc\\CommonTypes\\": "tests/misc/"
        }
    },
    "scripts": {
        "fix-cs": "vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --config vendor/ixocreate/coding-standard/.php_cs"
    }
}

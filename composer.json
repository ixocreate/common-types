{
    "name": "ixocreate/type-package",
    "description": "IXOCREATE Type Package",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "IXOCREATE"
        }
    ],
    "require": {
        "php": "^7.1",
        "ext-json": "*",
        "ixocreate/application": "^0.1",
        "ixocreate/schema-package": "^0.1",
        "nadar/quill-delta-parser": "^1.1",
        "beberlei/assert": "^2.9",
        "ramsey/uuid": "^3.7"
    },
    "require-dev": {
        "ixocreate/coding-standard": "^2.0",
        "php-coveralls/php-coveralls": "^2.1",
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Ixocreate\\Type\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ixocreate\\Test\\Type\\": "tests/src/",
            "Ixocreate\\Misc\\Type\\": "tests/misc/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "fix-cs": "vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --config vendor/ixocreate/coding-standard/.php_cs"
    }
}
